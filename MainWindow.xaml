<Window x:Class="havadurumutugba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="358.328" Width="660.407" BorderBrush="#FF040101" BorderThickness="1" ResizeMode="NoResize" Icon="Oxygen-Icons.org-Oxygen-Status-weather-showers-day.ico">
    <Window.Background>
        <ImageBrush TileMode="FlipX" ImageSource="arkaplan/dunya.jpg"/>
    </Window.Background>
    <Grid Name="grd1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="106*"></ColumnDefinition>
            <ColumnDefinition  Width="374*"></ColumnDefinition>
            <ColumnDefinition  Width="107*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="31"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition Height="55"></RowDefinition>
            <RowDefinition Height="55"></RowDefinition>

        </Grid.RowDefinitions>

        <Image Grid.Row="0" Name="img1"
Source="arkaplan\sun_rain_snow.png" Stretch="Fill" Grid.Column="1" Height="60" Width="60" Margin="355,0,0,27" Grid.RowSpan="2"/>

        <Label Grid.Row="0" Grid.Column="1" FontFamily="Urdu Typesetting" FontSize="22" FontWeight="Bold" Margin="71,0,60,0" Foreground="#FFE7F7F9">HAVA DURUMU SORGULA</Label>

        <Label Grid.Row="1" Grid.Column="0" FontSize="14" Foreground="#FFEAF5F4" FontFamily="Urdu Typesetting" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">KONUM :</Label>
        <TextBox Grid.Row="1" Name="txt1" FontSize="18" Background="#FFBCC2C5" Grid.ColumnSpan="2" FontWeight="Bold" FontFamily="Urdu Typesetting" Grid.Column="1"/>

        <Label Grid.Row="5" Grid.Column="0" FontSize="14" Foreground="#FFF4F8F9" FontFamily="Urdu Typesetting" FontWeight="Bold" BorderThickness="0,0,1,1" BorderBrush="#FFC5ECF0">SICAKLIK</Label>
        <Label Grid.Row="5" Grid.Column="1" Content="{Binding sicaklik}" Grid.ColumnSpan="2" Foreground="#FFF7F9F9" FontFamily="Urdu Typesetting" FontSize="16" FontWeight="Bold" BorderThickness="0,0,0,1" BorderBrush="#FFB5E4E0"></Label>

        <Label Grid.Row="6" Grid.Column="0" FontSize="14" Foreground="#FFF0FDFB" FontFamily="Urdu Typesetting" FontWeight="Bold" BorderThickness="0,0,1,1" BorderBrush="#FF77C7C7">NEM ORANI</Label>
        <Label Grid.Row="6"  Grid.Column="1" Content="{Binding nem}" Grid.ColumnSpan="2" FontSize="16" FontFamily="Urdu Typesetting" FontWeight="Bold" Foreground="#FFF6F9F9" BorderThickness="0,0,0,1" BorderBrush="#FF85BEC7"/>

        <Label Grid.Row="4" Grid.Column="0" FontSize="14" Foreground="#FFF2F9F8" FontFamily="Urdu Typesetting" FontWeight="Bold" BorderBrush="#FF85C1D3" BorderThickness="0,0,1,1">HAVA</Label>
        <Label Grid.Row="4" Grid.Column="1" Content="{Binding hava}" Grid.ColumnSpan="2" Foreground="#FFFBFFFE" FontFamily="Urdu Typesetting" FontSize="16" FontWeight="Bold" BorderThickness="0,0,0,1" BorderBrush="#FF69B2BD"></Label>

        <Label Grid.Row="3" Grid.Column="0" FontSize="14" Foreground="#FFEAF5F4" FontFamily="Urdu Typesetting" FontWeight="Bold" BorderThickness="0,0,1,1" BorderBrush="#FF7DBBC9">ÜLKE</Label>
        <Label Grid.Row="3" Grid.Column="1" Content="{Binding ulke}" Grid.ColumnSpan="2" FontSize="16" FontFamily="Urdu Typesetting" FontWeight="Bold" Foreground="#FFFBFDFD" BorderThickness="0,0,0,1" BorderBrush="#FF7EC2C9"></Label>



        <Button Click="Button_Click" Grid.Row="2" Background="#FF1763BF" FontSize="14" Grid.ColumnSpan="3" Foreground="#FF080101" FontFamily="Cambria" TextOptions.TextHintingMode="Fixed" RenderTransformOrigin="0.5,0.5" FontWeight="Bold">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform> TIKLAYIN
        </Button>
        <Rectangle Grid.Row="5" Grid.Column="2" Height="36" HorizontalAlignment="Center" VerticalAlignment="Center" Stroke="Black" Width="108" Margin="93,62,141,71">

        </Rectangle>
        <TextBlock Grid.Row="6" Grid.Column="2" Name="tblcsaat" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White" FontSize="20" TextWrapping="Wrap" 
                   Background="Transparent" Text="" VerticalAlignment="Center"/>
       
        

    </Grid>

</Window>
